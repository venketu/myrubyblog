<h1>Add New Posts</h1>
<%= form_for @post do |f| %>
	<p>
		<%= f.label :title %> <br />
		<%= f.text_field :title %><br />
	</p>
	<p>
		<%= f.label :body %> <br />
		<%= f.text_area :body, cols: 60, rows: 20 %><br />
	</p>
	<p>
		<%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]},
		{:include_blank => "Select One"} %> <br />
		
	</p>
	<p>
		<%= f.submit "Add Post" %>
	</p>


<% end %>